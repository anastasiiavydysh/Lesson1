<Window x:Class="Lessons1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lessons1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBoxOutput" HorizontalAlignment="Left" Margin="477,32,0,0" TextWrapping="Wrap" Text="Your text will be here" VerticalAlignment="Top" Width="244" Height="30"/>
        <Button Content="Click me!" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top" Height="41" Width="110" Click="Button_Click"/>
        <TextBox x:Name="TextBoxInput" HorizontalAlignment="Left" Margin="90,32,0,0" TextWrapping="Wrap" Text="Please write your text here" VerticalAlignment="Top" Width="244" Height="30"/>

    </Grid>
</Window>
